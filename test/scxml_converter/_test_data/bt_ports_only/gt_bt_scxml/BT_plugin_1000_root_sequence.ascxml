<ascxml name="BT_plugin_1000_root_sequence" version="1.0" model_src="" initial="init" xmlns="http://www.w3.org/2005/07/scxml">
    <datamodel>
        <data id="success_count" expr="0" type="int8"/>
        <data id="running_child" expr="-1" type="int8"/>
        <data id="failed_child" expr="-1" type="int8"/>
        <data id="child_idx" expr="0" type="int8"/>
        <data id="children_count" type="int8">
            <expr>
                <bt_get_input key="CHILDREN_COUNT"/>
            </expr>
        </data>
    </datamodel>
    <bt_declare_port_in key="CHILDREN_COUNT" type="int8"/>
    <state id="init">
        <transition cond="children_count &lt; 1" target="error"/>
        <transition target="wait_for_tick"/>
    </state>
    <state id="wait_for_tick">
        <bt_tick target="tick_children">
            <assign location="success_count" expr="0"/>
            <assign location="child_idx" expr="0"/>
            <assign location="failed_child" expr="-1"/>
        </bt_tick>
        <bt_halt target="reset_children">
            <assign location="child_idx" expr="0"/>
            <assign location="failed_child" expr="-1"/>
        </bt_halt>
    </state>
    <state id="reset_children">
        <onentry>
            <if cond="child_idx &lt; children_count">
                <bt_halt_child id="child_idx"/>
            </if>
        </onentry>
        <bt_child_halted target="reset_children" id="child_idx">
            <assign location="child_idx" expr="child_idx + 1"/>
        </bt_child_halted>
        <transition cond="child_idx &gt;= children_count" target="wait_for_tick">
            <if cond="success_count == children_count">
                <bt_return_status status="SUCCESS"/>
                <elseif cond="failed_child &gt;= 0"/>
                <bt_return_status status="FAILURE"/>
                <else/>
                <bt_return_halted/>
            </if>
            <assign location="child_idx" expr="0"/>
            <assign location="success_count" expr="0"/>
            <assign location="running_child" expr="-1"/>
            <assign location="failed_child" expr="-1"/>
        </transition>
    </state>
    <state id="tick_children">
        <onentry>
            <if cond="success_count &lt; children_count">
                <bt_tick_child id="child_idx"/>
            </if>
        </onentry>
        <bt_child_status cond="_bt.status == 1" target="tick_children" id="child_idx">
            <assign location="success_count" expr="success_count + 1"/>
            <assign location="child_idx" expr="child_idx + 1"/>
        </bt_child_status>
        <bt_child_status cond="_bt.status == 2" target="reset_children" id="child_idx">
            <assign location="failed_child" expr="child_idx"/>
            <assign location="child_idx" expr="0"/>
        </bt_child_status>
        <bt_child_status cond="_bt.status == 3" target="reset_other_children" id="child_idx">
            <assign location="running_child" expr="child_idx"/>
            <assign location="child_idx" expr="0"/>
        </bt_child_status>
        <transition cond="success_count == children_count" target="reset_children">
            <assign location="child_idx" expr="0"/>
        </transition>
        <transition cond="child_idx &lt; 0 || child_idx &gt;= children_count" target="error"/>
    </state>
    <state id="reset_other_children">
        <onentry>
            <if cond="child_idx == running_child">
                <assign location="child_idx" expr="child_idx + 1"/>
            </if>
            <if cond="child_idx &lt; children_count">
                <bt_halt_child id="child_idx"/>
            </if>
        </onentry>
        <bt_child_halted target="reset_other_children" id="child_idx">
            <assign location="child_idx" expr="child_idx + 1"/>
        </bt_child_halted>
        <transition cond="child_idx &gt;= children_count" target="wait_for_tick">
            <bt_return_status status="RUNNING"/>
        </transition>
    </state>
    <state id="error"/>
</ascxml>
