<ascxml name="BT_plugin_1001_answer" version="1.0" model_src="" initial="initial" xmlns="http://www.w3.org/2005/07/scxml">
    <datamodel>
        <data id="number" expr="0" type="int16"/>
    </datamodel>
    <bt_declare_port_in key="name" type="string"/>
    <bt_declare_port_in key="data" type="int16"/>
    <ros_topic_publisher name="answer_pub" type="std_msgs/Int16">
        <topic>
            <bt_get_input key="name"/>
        </topic>
    </ros_topic_publisher>
    <state id="initial">
        <bt_tick target="initial">
            <assign location="number">
                <expr>
                    <bt_get_input key="data"/>
                </expr>
            </assign>
            <ros_topic_publish name="answer_pub">
                <field name="data" expr="number"/>
            </ros_topic_publish>
        </bt_tick>
    </state>
</ascxml>
