<?xml version="1.0" encoding="UTF-8"?>
<scxml
    initial="use_battery"
    version="1.0"
    name="BatteryDrainer"
    model_src=""
    xmlns="http://www.w3.org/2005/07/scxml">

    <datamodel>
        <data id="battery_percent" expr="100" type="int32" />
    </datamodel>

    <ros_topic_subscriber topic="charge" type="std_msgs/Empty" />
    <!-- TODO: the target argument is up for discussion: that could be autogenerated, once all subscribers and publishers are known.-->
    <ros_topic_publisher topic="level" type="std_msgs/Int32" />
    <ros_time_rate rate_hz="1.0" name="my_timer" />

    <state id="use_battery">
        <onentry>
            <ros_topic_publish name="level">
                <field name="data" expr="battery_percent" />
            </ros_topic_publish>
        </onentry>
        <ros_rate_callback name="my_timer" target="use_battery">
            <assign location="battery_percent" expr="battery_percent - 1" />
        </ros_rate_callback>
        <ros_topic_callback name="charging" target="use_battery">
            <assign location="battery_percent" expr="100" />
        </ros_topic_callback>
    </state>
</scxml>
