<ascxml name="BT_plugin_1002_alarm" version="1.0" model_src="" initial="initial" xmlns="http://www.w3.org/2005/07/scxml">
    <datamodel>
        <data id="last_msg" expr="False" type="bool"/>
    </datamodel>
    <ros_topic_subscriber name="alarm" type="std_msgs/Bool" topic="alarm"/>
    <state id="initial">
        <ros_topic_callback target="initial" name="alarm">
            <assign location="last_msg" expr="_msg.data"/>
        </ros_topic_callback>
        <bt_tick target="initial">
            <if cond="last_msg">
                <bt_return_status status="SUCCESS"/>
                <else/>
                <bt_return_status status="FAILURE"/>
            </if>
        </bt_tick>
        <bt_halt target="initial"/>
    </state>
</ascxml>
