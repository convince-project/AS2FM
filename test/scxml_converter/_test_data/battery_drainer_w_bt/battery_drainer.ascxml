<?xml version="1.0" encoding="UTF-8"?>
<ascxml
    initial="use_battery"
    version="1.0"
    name="BatteryDrainer"
    model_src=""
    xmlns="http://www.w3.org/2005/07/scxml">

    <datamodel>
        <data id="battery_percent" type="int16" expr="100" />
    </datamodel>

    <ros_topic_subscriber name="sub" type="std_msgs/Empty">
        <topic>charge</topic>
    </ros_topic_subscriber>
    <!-- TODO: the target argument is up for discussion: that could be autogenerated, once all subscribers and publishers are known.-->
    <ros_topic_publisher name="pub" topic="level" type="std_msgs/Int32" />
    <ros_time_rate rate_hz="1.0" name="my_timer" />

    <state id="use_battery">
        <onentry>
            <ros_topic_publish name="pub">
                <field name="data" expr="battery_percent" />
            </ros_topic_publish>
        </onentry>
        <ros_rate_callback name="my_timer" target="use_battery">
            <assign location="battery_percent" expr="battery_percent - 1" />
        </ros_rate_callback>
        <ros_topic_callback name="sub" target="use_battery">
            <assign location="battery_percent" expr="100" />
        </ros_topic_callback>
    </state>
</ascxml>
