<?xml version="1.0" encoding="UTF-8"?>
<scxml
    initial="idle"
    version="1.0"
    name="IsBlockFell"
    model_src=""
    xmlns="http://www.w3.org/2005/07/scxml">

    <ros_service_client name="get_block_status" service_name="/uc2/world/get_block_status" type="uc2_interfaces/GetBlockStatus" />

    <datamodel>
        <data id="block_down" type="int32" expr="-1" />
    </datamodel>

    <state id="idle">
        <transition event="bt_tick" target="send_req" />
    </state>

    <state id="send_req">
        <onentry>
            <ros_service_send_request name="get_block_status">
            </ros_service_send_request>
        </onentry>
        <transition target="wait_answer" />
    </state>

    <state id="wait_answer">
        <!--<onentry>
            <send event="bt_running" />
        </onentry>
        <transition event="bt_tick" target="wait_answer" />-->
        <ros_service_handle_response name="get_block_status" target="idle"> <!--target="answer">-->
            <assign location="block_down" expr="_res.block_down" />
            <if cond="block_down > 0">
                <send event="bt_success" />
                <else />
                <send event="bt_failure" />
            </if>
        </ros_service_handle_response>
    </state>

    <!--<state id="answer">
        <transition event="bt_tick" target="idle">
            <if cond="block_down > 0">
                <send event="bt_success" />
                <else />
                <send event="bt_failure" />
            </if>
        </transition>
    </state>-->

</scxml>
