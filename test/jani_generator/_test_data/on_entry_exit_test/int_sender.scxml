<?xml version="1.0" encoding="UTF-8"?>
<ascxml
    name="int_sender"
    version="1.0"
    initial="current"
    model_src=""
    xmlns="http://www.w3.org/2005/07/scxml">

    <datamodel>
        <data id="counter" expr="0" type="int32"/>
    </datamodel>

    <state id="current">
        <transition target="current">
            <assign location="counter" expr="counter + 1" />
            <send event="new_int">
                <param name="data" expr="counter" />
            </send>
        </transition>
    </state>

</ascxml>
