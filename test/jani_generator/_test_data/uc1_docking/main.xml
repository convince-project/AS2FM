<convince_mc_tc>
    <mc_parameters>
        <max_time value="20" unit="s" />
        <bt_tick_rate value="5.0" />
        <bt_tick_if_not_running value="true" />
    </mc_parameters>

    <behavior_tree>
        <input type="bt.cpp-xml" src="./policy.xml" />
        <input type="bt-plugin-ros-scxml" src="./bt_perform_docking_maneuver.scxml" />
        <input type="bt-plugin-ros-scxml" src="./bt_simple_wait.scxml" />
        <input type="bt-plugin-ros-scxml" src="./bt_is_charging.scxml" />
        <input type="bt-plugin-ros-scxml" src="./bt_reset_bumper_state.scxml" />
        <input type="bt-plugin-ros-scxml" src="./bt_back_up.scxml" />
        <input type="bt-plugin-ros-scxml" src="./bt_is_bump_detected.scxml" />
    </behavior_tree>

    <node_models>
        <input type="ros-scxml" src="./robot_model.scxml" />
    </node_models>

    <properties>
        <input type="jani" src="./properties.jani" />
    </properties>
</convince_mc_tc>
