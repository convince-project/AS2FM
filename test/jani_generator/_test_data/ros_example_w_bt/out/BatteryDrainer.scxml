<?xml version='1.0' encoding='utf-8'?>
<scxml name="BatteryDrainer" version="1.0" model_src="" initial="use_battery" xmlns="http://www.w3.org/2005/07/scxml">
    <datamodel>
        <data id="battery_percent" expr="100" type="int16" />
    </datamodel>
    <state id="use_battery">
        <onentry>
            <send event="topic_level_msg">
                <param name="ros_fields__data" expr="battery_percent" />
            </send>
        </onentry>
        <transition target="use_battery" event="ros_time_rate.my_timer" cond="battery_percent &gt; 0">
            <assign location="battery_percent" expr="battery_percent - 1" />
        </transition>
        <transition target="use_battery" event="topic_charge_msg">
            <assign location="battery_percent" expr="100" />
        </transition>
    </state>
</scxml>