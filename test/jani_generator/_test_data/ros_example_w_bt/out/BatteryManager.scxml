<?xml version='1.0' encoding='utf-8'?>
<scxml name="BatteryManager" version="1.0" model_src="" initial="check_battery" xmlns="http://www.w3.org/2005/07/scxml">
    <datamodel>
        <data id="battery_alarm" expr="false" type="bool" />
    </datamodel>
    <state id="check_battery">
        <onentry>
            <send event="topic_alarm_msg">
                <param name="ros_fields__data" expr="battery_alarm" />
            </send>
        </onentry>
        <transition target="check_battery" event="topic_level_msg">
            <assign location="battery_alarm" expr="_event.ros_fields__data &lt; 30" />
        </transition>
    </state>
</scxml>