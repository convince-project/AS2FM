<convince_mc_tc>
    <mc_parameters>
        <max_time value="100" unit="s" />
        <max_array_size value="10" />
        <bt_tick_rate value="5.0" />
        <bt_tick_if_not_running value="true" />
    </mc_parameters>

    <behavior_tree>
        <input type="bt.cpp-xml" src="./bt.xml" />
        <input type="bt-plugin-ros-scxml" src="./bt_move.scxml" />
        <input type="bt-plugin-ros-scxml" src="./bt_shall_move.scxml" />
        <input type="bt-plugin-ros-scxml" src="./bt_update_goal_and_current_position.scxml" />
    </behavior_tree>

    <node_models>
        <input type="ros-scxml" src="./world.scxml" />
    </node_models>

    <properties>
        <input type="jani" src="./properties.jani" />
    </properties>
</convince_mc_tc>
