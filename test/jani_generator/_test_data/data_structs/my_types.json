{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "PolygonArray",
    "description": "A list of polygons in 2D",
    "type": "object",
    "properties": {
        "polygons": {
            "type": "array",
            "items": {
                "$ref": "#/$defs/Polygon"
            }
        }
    },
    "$defs": {
        "Polygon": {
            "type": "object",
            "properties": {
                "points": {
                    "type": "array",
                    "items": {
                        "$ref": "#/$defs/Point2D"
                    }
                }
            }
        },
        "Point2D": {
            "type": "object",
            "properties": {
                "frame": {
                    "type": "string"
                },
                "x": {
                    "type": "number"
                },
                "y": {
                    "type": "number"
                }
            }
        }
    }
}
