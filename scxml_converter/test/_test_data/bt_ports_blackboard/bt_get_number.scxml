<?xml version="1.0" encoding="UTF-8"?>
<scxml 
    initial="init" 
    version="1.0" 
    name="GetNumber"
    model_src=""
    xmlns="http://www.w3.org/2005/07/scxml">

    <datamodel>
        <data id="number" type="int16" expr="0" />
    </datamodel>

    <bt_declare_port_out key="out" type="int16" />

    <state id="init">
        <onentry>
            <assign location="number" expr="{in}" />
            <bt_set_output key="out" expr="number" />
        </onentry>
    </state>
</scxml>
