<?xml version="1.0" encoding="UTF-8"?>
<scxml 
    initial="receive_a" 
    version="1.0" 
    name="receiver"
    model_src=""
    xmlns="http://www.w3.org/2005/07/scxml">
    
    <datamodel>
        <data id="a_seq" expr="0" type="int16" />
        <data id="b_seq" expr="0" type="int16" />
    </datamodel>

    <state id="receive_a">
        <transition target="receive_b" event="msg_a">
            <assign location="a_seq" expr="_event.seq" />
        </transition>
    </state>

    <state id="receive_b">
        <transition target="receive_a" event="msg_b">
            <assign location="b_seq" expr="_event.seq" />
        </transition>
    </state>

</scxml>